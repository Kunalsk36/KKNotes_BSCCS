<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headerLayout"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@drawable/headerbackgroundimg"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:id="@+id/profileImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="Profile Image"
        android:src="@drawable/profile_icon" />

    <TextView
        android:id="@+id/userNameOfPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kunalsk36"
        android:textColor="@color/profile_name_header"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/emailOfPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kunalkavathekar@gmail.com"
        android:textColor="@color/email_name_header"
        android:textSize="16sp" />

</LinearLayout>